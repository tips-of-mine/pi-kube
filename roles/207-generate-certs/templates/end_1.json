{
    "CN": "{{ item.name }}",
    "hosts": [
{% for host in groups['workers'] %}
        "{{ hostvars[host].ansible_host}}",
        "{{ host }}",
{% endfor %}
        "127.0.0.1"
    ],
    "key": {
        "algo": "rsa",
        "size": 2048
    },
    "names": [
        {
            "C": "{{ c }}",
            "ST": "{{ st }}",
{% if item.o|length > 0 %}
            "O": "{{ item.o }}",
{% endif %}
            "L": "{{ l }}"
        }
    ]
}
