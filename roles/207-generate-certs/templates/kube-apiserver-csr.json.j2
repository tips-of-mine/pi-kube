{
    "CN": "kube-apiserver",
    "hosts": [
        "{{ hostvars[item].ansible_host}}",
        "{{ item }}",
        "{{ advertise_ip_masters }}",
        "kubernetes",
        "kubernetes.default",
        "kubernetes.default.svc",
        "kubernetes.default.svc.cluster",
        "kubernetes.default.svc.cluster.local"
    ],
    "key": {
        "algo": "rsa",
        "size": 2048
    },
    "names": [
        {
            "C": "{{ c }}",
            "ST": "{{ st }}",
            "L": "{{ l }}"
        }
    ]
}
